<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="auv_bot" params="parent prefix *origin">

    <!-- Base Link -->
    <link name="${prefix}/base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.1 0.1 0.1"/>
        </geometry>
        <material name="orange"/>
      </visual>
    </link>

    <!-- Middle Link -->
    <link name="${prefix}/link1">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0 0 0"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0 0 0"/>
        </geometry>
        <material name="yellow"/>
      </visual>
    </link>

    <!-- Top Link -->
    <link name="${prefix}/link2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0 0 0"/>
        </geometry>
        <material name="orange"/>
      </visual>
    </link>

    <joint name="${prefix}/joint1" type="continuous">
      <parent link="${prefix}/base_link"/>
      <child link="${prefix}/link1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

    <joint name="${prefix}/joint2" type="continuous">
      <parent link="${prefix}/link1"/>
      <child link="${prefix}/link2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

    <!-- Thrusters -->

    <link name="${prefix}/thruster3"/>
    <link name="${prefix}/thruster4"/>

    <link name="${prefix}/thruster5"/>
    <link name="${prefix}/thruster6"/>

    <joint name="${prefix}/thruster3_joint" type="continuous">
      <parent link="${prefix}/base_link"/>
      <child link="${prefix}/thruster3"/>
      <origin xyz="-0.35 0.35 0" rpy="0 0 0.785398"/>
      <axis xyz="1 0 0"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

    <joint name="${prefix}/thruster4_joint" type="continuous">
      <parent link="${prefix}/base_link"/>
      <child link="${prefix}/thruster4"/>
      <origin xyz="-0.35 -0.35 0" rpy="0 0 -0.785398"/>
      <axis xyz="1 0 0"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

    <joint name="${prefix}/thruster5_joint" type="continuous">
      <parent link="${prefix}/base_link"/>
      <child link="${prefix}/thruster5"/>
      <origin xyz="0.60 0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

    <joint name="${prefix}/thruster6_joint" type="continuous">
      <parent link="${prefix}/base_link"/>
      <child link="${prefix}/thruster6"/>
      <origin xyz="-0.60 0.0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit effort="100" velocity="1.0"/>
    </joint>

  </xacro:macro>

</robot>